doctype html
html(lang='en' ng-app='hello')
  head
    //- meta
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='description', content='Hello')
    meta(name='keywords', content='')

    //- mobile config
    meta(name='viewport', content='width=device-width,height=device-height, initial-scale=1, maximum-scale=1,minimal-ui')
    meta(name='msapplication-tap-highlight', content='no')
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-status-bar-style" content="black")
    meta(name="apple-mobile-web-app-title" content="Hello")

    //- css
    link(href='/stylesheets/app.css', rel='stylesheet')

    //- iOS Icons
    link(href='/images/ios/AppIcon76x76@2x.png', sizes='152x152', rel='apple-touch-icon')
    link(href='/images/ios/AppIcon60x60@2x.png', sizes='120x120', rel='apple-touch-icon')
    link(href='/images/ios/AppIcon72x72@2x.png', sizes='144x144', rel='apple-touch-icon')
    link(href='/images/ios/AppIcon57x57@2x.png', sizes='114x114', rel='apple-touch-icon')
    link(href='/images/ios/AppIcon76x76.png', sizes='76x76', rel='apple-touch-icon')
    link(href='/images/ios/AppIcon60x60.png', sizes='60x60', rel='apple-touch-icon')
    link(href='/images/ios/AppIcon72x72.png', sizes='72x72', rel='apple-touch-icon')
    link(href='/images/ios/AppIcon57x57.png', sizes='57x57', rel='apple-touch-icon')

    //- iOS Splashscreens
    link(href='/images/ios/splashscreen_ipad_retina_portrait.png' media='(device-width: 768px) and (device-height: 1024px) and (orientation: portrait) and (-webkit-device-pixel-ratio: 2)' rel='apple-touch-startup-image')
    link(href='/images/ios/splashscreen_ipad_retina_landscape.png' media='(device-width: 768px) and (device-height: 1024px) and (orientation: landscape) and (-webkit-device-pixel-ratio: 2)' rel='apple-touch-startup-image')
    link(href='/images/ios/splashscreen_ipad_portrait.png' media='(device-width: 768px) and (device-height: 1024px) and (orientation: portrait) and (-webkit-device-pixel-ratio: 1)' rel='apple-touch-startup-image')
    link(href='/images/ios/splashscreen_ipad_landscape.png' media='(device-width: 768px) and (device-height: 1024px) and (orientation: landscape) and (-webkit-device-pixel-ratio: 1)' rel='apple-touch-startup-image')
    link(href='/images/ios/splashscreen_iphone5.png' media='(device-width: 320px) and (device-height: 568px) and (-webkit-device-pixel-ratio: 2)' rel='apple-touch-startup-image')
    link(href='/images/ios/splashscreen_iphone4_retina.png' media='(device-width: 320px) and (device-height: 480px) and (-webkit-device-pixel-ratio: 2)' rel='apple-touch-startup-image')
    link(href='/images/ios/splashscreen_iphone4.png' media='(device-width: 320px) and (device-height: 480px) and (-webkit-device-pixel-ratio: 1)' rel='apple-touch-startup-image')

    //- js
    //- script(src='https://cdn.socket.io/socket.io-1.0.4.js')

    script(src='//maps.googleapis.com/maps/api/js?v=3.8&key=#{secret.google.map.key}&sensor=false')
    script(src='/javascripts/plugins.js')
    script(src='/javascripts/app.js')

    //- script.
    //-     socket = io.connect('http://localhost:8000')
    

    - if (secret.typekit.kit)
        script(type="text/javascript" src="//use.typekit.net/#{secret.typekit.kit}.js")

    script(type="text/javascript").
        try{Typekit.load();}catch(e){}

    - if (page_title)
        title #{page_title}
    - else
        title #{__("site-title")} 

  body(ng-controller='AppCtrl')
    
    block content

  script.
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '#{secret.google.analytics.id}', 'auto');
    ga('send', 'pageview');
    